<p id="notice"><%= notice %></p>

<h1>Topic 一覧</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>コンテンツ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.title %></td>
        <td><%= topic.content %></td>
        <td><%= link_to '詳細', topic %></td>
        <td><%= link_to '編集', edit_topic_path(topic) %></td>
        <td><%= link_to '削除', topic, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

