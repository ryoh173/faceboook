<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p id="notice"><%= notice %></p>
    <h1>Topic 一覧</h1>
    <%= link_to 'New トピック', new_topic_path, class: 'btn btn-default' %>
    <% @topics.each do |topic| %>
      <div class = "row">
        <%= link_to topics_path(topic) do %>
          <h4><strong><%= topic.title %></strong></h4>
        <% end %>
          <p><%= topic.content %></p>
          <p><%= topic.user.name %></p>
          <%= link_to '詳細', topic %>
          <br>
          <%= link_to '編集', edit_topic_path(topic), class: 'btn btn-sm btn-success' %>
          <%= link_to '削除', topic, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-sm btn-danger' %>
      </div>
    <% end %>
  </div>
</div>
