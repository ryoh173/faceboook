<div class="container">
  <span class ="user_description">
    <%= profile_img(@user) %>
    <%= @user.name + " さんの詳細ページ" %>
    <br>
    <span class="glyphicon glyphicon-envelope mail">
    </span>
      <%= @user.email %></span>


  <div class="container-child col-md-12 col-sm-12 col-xs-12 ">
    <h3>フォロー一覧</h3>
    <% @user.followed_users.each do |user| %>
    <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
      <%= profile_img(user) %>
      <%= user.name %>
    </div>
    <% end %>
  </div>

  <div class="container-child col-md-12 col-sm-12 col-xs-12" >
    <h3>フォローワー一覧</h3>
    <% @user.followers.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
      <%= profile_img(user) %>
      <%= user.name %>
      </div>
    <% end %>
  </div>
</div>
