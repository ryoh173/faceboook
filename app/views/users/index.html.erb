<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h2>ユーザー</h2>
      <% @users.each do |user| %>
        <div class="container-child col-md-4 col-sm-6 col-xs-6 row-body ">
          <%= profile_img(user) %>
          <%= link_to user.name, user %>
          <%= user.email %>
          <% if user.id != current_user.id %>
            <li>
              <div class="item">
                <%= link_to user.name, user %>
                <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%>
              </div>
              <%= render partial: 'follow_form', locals: { user: user } if signed_in?   %>
            </li>
          <% end %>
        </div>
        <% end %>
  </div>
</div>
